# Kopi Challenge - Tactical Empathy Debate Bot
# Environment Configuration Template
# 
# Copy this file to .env and configure your settings:
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================

# PostgreSQL database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=tactical_empathy
DB_HOST=postgres

# =============================================================================
# APPLICATION CONFIGURATION (Required)
# =============================================================================

# Application settings
APP_NAME=tactical_empathy_app
APP_PORT=8000

# Django settings
SECRET_KEY=change_this_to_a_long_random_secret_key_for_production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# AI PROVIDER CONFIGURATION (Required)
# =============================================================================

# Primary AI provider to use (options: openai)
AI_PROVIDER=openai

# -----------------------------------------------------------------------------
# OpenAI Configuration (if using AI_PROVIDER=openai)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# AI Response Configuration
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.8
AI_TIMEOUT=30